        <Button Content="Добавяне на автомобил" HorizontalAlignment="Left" Margin="336,96,0,0" VerticalAlignment="Top" Width="171" Height="45" FontFamily="Segoe Marker" Background="#FFCB3122" Foreground="White" FontSize="14" Command="{Binding AddCarButtonCommand}"/>
        <Label Content="Добре дошли" HorizontalAlignment="Left" Margin="153,10,0,0" VerticalAlignment="Top" Foreground="#FFF50F0F" FontFamily="Rage Italic" FontSize="48"/>
        <Label Content="AG INSURANCE GROUP  " HorizontalAlignment="Left" Margin="106,352,0,0" VerticalAlignment="Top" Width="401" FontFamily="Segoe Print" Background="White" Foreground="#FFFF2611" Height="91" FontSize="48"/>
